{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "aws-lambda"],
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["infra/**/*.ts", "lambda/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
