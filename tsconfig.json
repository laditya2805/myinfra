{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDirs": ["infra", "lambda"],
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node", "aws-lambda"]
  },
  "include": ["infra/**/*.ts", "lambda/**/*.ts"]
}
